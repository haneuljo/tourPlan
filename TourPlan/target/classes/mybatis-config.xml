<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration
	PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
	
<configuration>
	<!-- Mybatis용 디비위치 -->
	<!-- source -->
	<properties>
		<property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
		<property name="url" value="jdbc:oracle:thin:@192.168.219.118:1521:XE"/>
		<property name="username" value="tour"/>
		<property name="password" value="a123"/>
	</properties>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/> <!-- 내부적으로 처리하는 경우는 무조건 JDBC이다 -->
			<dataSource type="POOLED"> <!-- 톰캣을 사용할때 톰캣을 메모리상에 어쩌구저쩌구 -->
				<property name="driver" value="${driver}"/> <!-- source의 driver -->
				<property name="url" value="${url}"/>
				<property name="username" value="${username}"/>
				<property name="password" value="${password}"/>
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<mapper resource="com/tour/mybatis/memberMapper.xml"/>
		<mapper resource="com/tour/mybatis/clipBoardMapper.xml"/>
		<mapper resource="com/tour/mybatis/planMapper.xml"/>
		<mapper resource="com/tour/mybatis/planInfoMapper.xml"/>
	</mappers>

</configuration>